<?xml version="1.0" encoding="utf-8"?>
<com.any.imagelibrary.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/imgpk_bg_color"
    android:padding="1dp">

    <com.any.imagelibrary.widget.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_image_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/imgpk_take_photo"
        android:textColor="@color/imgpk_text_color_white"
        android:textSize="14sp" />

</com.any.imagelibrary.widget.SquareRelativeLayout>